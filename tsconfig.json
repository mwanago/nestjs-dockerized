{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@mediaengine/media": [
        "libs/media/src"
      ],
      "@mediaengine/media/*": [
        "libs/media/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}